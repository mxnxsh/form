<%- include("partials/header.ejs") %>

    <section>
        <div class="container-fluid">
            <div class="row home align-items-center justify-content-center">
                <div class="col-10 left col-lg-6 mx-auto text-center d-flex justify-content-center">
                    <div class="img-container text-center imageStyle">
                        <img id="image_logo" src="/images/undraw_interview_rmcf (1).svg" width="420px" height="420px" alt="">
                    </div>
                </div>
                <div class="col-10 right col-lg-6 mx-auto text-capitalize text-center d-flex justify-content-center formStyle">

                    <!-- Student login -->
                    <form class="student-login" method="post" action="/studentRegister" onsubmit="return validation()">
                        <div class="d-flex justify-content-center text-center my-3">
                            <div class="spacing">
                                <a href="#" class="btn form-btn studentlogin ">STUDENT</a>
                            </div>
                            <div class="spacing">
                                <a href="#" class="btn form-btn companylogin">COMPANY</a>
                            </div>
                        </div>
                        <%if(error){%>
                            <div class="alert alert-danger" role="alert">
                                <%=error%>
                            </div>
                            <%}%>
                                <!-- Name field -->

                                <div class="form-group  text-left element_title">

                                    <div class="form-group form-content namef">
                                        <label>First Name</label>
                                        <input type="text" placeholder="First Name" class="form-control " id="fname" name="fname" required>
                                        <span id="firstname" class="text-danger font-weight-bold"> </span>
                                    </div>
                                    <div class="form-group form-content  namel">
                                        <label for="exampleInputEmail1">Last Name</label>
                                        <input type="text" placeholder="Last Name" class="form-control" id="lname" name="lname" required>
                                        <span id="lastname" class="text-danger font-weight-bold"> </span>
                                    </div>
                                </div>
                                <!-- Email field -->
                                <div class="form-group form-content text-left">
                                    <label for="exampleInputEmail1">Email address</label>
                                    <input type="email" placeholder="Email ID" class="form-control" id="emails" name="email">
                                    <span id="emailids" class="text-danger font-weight-bold"> </span>
                                </div>

                                <!-- Mobile number field -->
                                <div class="form-group form-content text-left">
                                    <label for="exampleInputEmail1">Mobile No</label>
                                    <input type="text" placeholder="Mobile No" class="form-control" id="mobileNumber" name="number">
                                    <span id="mobileno" class="text-danger font-weight-bold"> </span>
                                </div>
                                <!-- City field -->
                                <div class="form-group form-content text-left">
                                    <label for="exampleInputEmail1">City</label>
                                    <input type="text" placeholder="City" class="form-control" id="city" name="city">
                                    <span id="cityname" class="text-danger font-weight-bold"> </span>
                                </div>
                                <button type="submit" class="btn submit-btn">Submit</button>
                                <div class="icons d-flex justify-content-around">
                                    <a href="https://www.facebook.com/mergeintern" class="facebook"><img src="/images/icons8-facebook-50.png" alt=""></a>
                                    <a href="https://www.instagram.com/mergeintern" class="instagram"><img src="/images/icons8-instagram-50.png" alt=""></a>
                                    <a href="https://www.linkedin.com/company/mergeintern" class="linkedin"><img src="/images/icons8-linkedin-50.png" alt=""></a>
                                    <a href="" class="youtube"><img src="/images/icons8-play-button-50.png" alt=""></a>
                                </div>
                    </form>
                    <!-- Company registration -->

                    <form class="company-login" method="post" action="/companyRegister" onsubmit="return companyValidation()" action="/">
                        <div class="d-flex justify-content-center text-center my-3">
                            <div class="spacing">
                                <a href="#" class="btn form-btn studentlogin">STUDENT</a>
                            </div>
                            <div class="spacing">
                                <a href="#" class=" btn form-btn companylogin">COMPANY</a>
                            </div>
                        </div>
                        <div class="form-group form-content text-left">
                            <%if(companyerror){%>
                                <div class="alert alert-danger" role="alert">
                                    <%=companyerror%>
                                </div>

                                <%}%>
                                    <label>Company Name</label>
                                    <input type="text" placeholder="Company Name" class="form-control" id="companyName" name="companyName">
                                    <span id="compName" class="text-danger font-weight-bold"> </span>
                        </div>
                        <div class="form-group form-content text-left">
                            <label>Email Id</label>
                            <input type="email" placeholder="Email ID" class="form-control" id="eml" name="companyEmail">
                            <span id="em" class="text-danger font-weight-bold"> </span>
                        </div>
                        <div class="form-group form-content text-left">
                            <label>Industry</label>
                            <select class="form-control required" name="industry" value="" id="select" onchange='company(this.value);' required>
                                <option value="">None</option>
                                <option>E-commerce</option>
                                <option>Saas</option>
                                <option>Fintech</option>
                                <option>Web Dev./Marketing Agency</option>
                                <option>Services</option>
                                <option>Media & Entertainment</option>
                                <option>Food & Beverage</option>
                                <option>Automobile</option>
                                <option>Hyperlocal</option>
                                <option>Logistics</option>
                                <option>Fashion</option>
                                <option>Agritech</option>
                                <option>Non-Profit</option>
                                <option>Others</option>
                            </select>
                            <input type="text" name="other" id="other" placeholder="Mention your field " class="form-control" style='display:none; margin-top:5px' />
                        </div>
                        <div class="form-group form-content text-left">
                            <label>Mobile No</label>
                            <input type="text" class="form-control" placeholder="Mobile No" id="mob" name="companyNumber">
                            <span id="mobno" class="text-danger font-weight-bold"> </span>
                        </div>
                        <button type="submit" class="btn btn-lg submit-btn">Submit</button>
                        <div class="icons d-flex justify-content-around">
                            <a href="https://www.facebook.com/mergeintern" class="facebook"><img src="/images/icons8-facebook-50.png" alt=""></a>
                            <a href="https://www.instagram.com/mergeintern" class="instagram"><img src="/images/icons8-instagram-50.png" alt=""></a>
                            <a href="https://www.linkedin.com/company/mergeintern" class="linkedin"><img src="/images/icons8-linkedin-50.png" alt=""></a>
                            <a href="" class="youtube"><img src="/images/icons8-play-button-50.png" alt=""></a>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </section>
    <script type="text/javascript">
        function validation() {

            var mobileNumber = document.getElementById('mobileNumber').value;
            var emails = document.getElementById('emails').value;
            var city = document.getElementById("city").value;


            //email validation
            if (emails == "") {
                document.getElementById('emailids').innerHTML = " ** Please fill the email id field";
                return false;
            }
            if (emails.indexOf('@') <= 0) {
                document.getElementById('emailids').innerHTML = " ** @ Invalid Position";
                return false;
            }

            if ((emails.charAt(emails.length - 4) != '.') && (emails.charAt(emails.length - 3) != '.')) {
                document.getElementById('emailids').innerHTML = " ** . Invalid Position";
                return false;
            }

            //phone number validation
            if (mobileNumber == "") {
                document.getElementById('mobileno').innerHTML = " ** Please fill the mobile NUmber field";
                return false;
            }

            if (isNaN(mobileNumber)) {
                document.getElementById('mobileno').innerHTML = " ** You must write digits only not characters";
                return false;
            }
            if (mobileNumber.length != 10) {
                document.getElementById('mobileno').innerHTML = " ** Mobile Number must be 10 digits only";
                return false;
            }

            // city validation
            if (city == "") {
                document.getElementById('cityname').innerHTML = " ** Please fill the city name field";
                return false;
            }
            if (!isNaN(city)) {
                document.getElementById('cityname').innerHTML = " ** Only characters are allowed";
                return false;
            }

        }

        function company(val) {
            var element = document.getElementById('other');
            if (val == 'None' || val == 'Others')
                element.style.display = 'block';
            else
                element.style.display = 'none';
        }

        // Company validation
        function companyValidation() {
            var companyName = document.getElementById('companyName').value;
            var eml = document.getElementById('eml').value;
            var mob = document.getElementById('mob').value;



            //Company name
            if (companyName == "") {
                document.getElementById("compName").innerHTML = "**Please fill the compamy name";
                return false;
            }
            //email validation
            if (eml == "") {
                document.getElementById('em').innerHTML = " ** Please fill the email id field";
                return false;
            }
            if (eml.indexOf('@') <= 0) {
                document.getElementById('em').innerHTML = " ** @ Invalid Position";
                return false;
            }

            if ((eml.charAt(eml.length - 4) != '.') && (eml.charAt(eml.length - 3) != '.')) {
                document.getElementById('em').innerHTML = " ** . Invalid Position";
                return false;
            }

            //phone number validation
            if (mob == "") {
                document.getElementById('mobno').innerHTML = " ** Please fill the mobile NUmber field";
                return false;
            }

            if (isNaN(mob)) {
                document.getElementById('mobno').innerHTML = " ** You must write digits only not characters";
                return false;
            }
            if (mob.length != 10) {
                document.getElementById('mobno').innerHTML = " ** Mobile Number must be 10 digits only";
                return false;
            }
        }
    </script>

    <%- include("partials/footer.ejs") %>